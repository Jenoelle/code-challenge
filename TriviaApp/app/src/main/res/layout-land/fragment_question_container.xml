<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="50dp">

            <TextView
                android:id="@+id/slide_txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question 3"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/slide_txt_difficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/slide_txt_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='The two atomic bombs dropped on Japan by the United States in August 1945 were named "Little Man" and "Fat Boy"'
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/slide_btn_true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_true" />

                <Button
                    android:id="@+id/slide_btn_false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_false" />
            </LinearLayout>

            <TextView
                android:id="@+id/slide_txt_question_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3/21" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>